<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FINANCE TRACKER</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>FINANCE TRACKER</h1>

    <main>
        <header>
            <div>
                <h5>TOTAL BALANCE</h5>
                <span id="balance"> Php 0.00</span>
            </div>

            <div>
                <h5>Income</h5>
                <span id="income">$0.00</span>
            </div>

            <div>
                <h5>Expense</h5>
                <span id="expense">$0.00</span>
            </div>
        </header>

        <section>
            <h3>Transactions</h3>
            <ul id="transactionList"></ul>
            <div id="status"></div>
        </section>

        <section>
            <h3>Add Transactions</h3>
            <form id="transactionForm" action="/add" method="POST">
                <div>
                    <label for="type">
                        <input type="checkbox" name="type" id="type" />
                        <div class="option">
                          <span>Expense</span>
                          <span>Income</span>
                        </div>
                    </label>
                </div>

                <div>
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Name" required>
                </div>

                <div>
                    <label for="amount">Amount</label>
                    <input type="number" name="amount" value="0" min="0.01" step="0.01" required />
                </div>

                <div>
                    <label for="date">Date</label>
                    <input type="date" name="date" required />
                </div>

                <button type="submit">Add</button>
            </form>
        </section>
    </main>

    <h2>Financial History</h2>
    <table class="content-header" border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% function dateFormat(dateString) { 
                const date = new Date(dateString); 
                const month = String(date.getMonth() + 1).padStart(2, '0'); 
                const day = String(date.getDate()).padStart(2, '0'); 
                const year = date.getFullYear(); 
                return `${month}/${day}/${year}`; 
            } %>
            <% transactions.forEach(transaction => { %>
            <tr>
                <td><%= transaction.id %></td>
                <td><%= transaction.type %></td>
                <td><%= transaction.name %></td>
                <td><%= transaction.amount %></td>
                <td><%= dateFormat(transaction.date) %></td>
                <td>
                    <button class="btn btn-view" onclick="viewTransaction(<%= JSON.stringify(transaction) %>)">View</button>
                    <button class="btn btn-update" onclick="showUpdateModal(<%= JSON.stringify(transaction) %>)">Update</button>
                    <button class="btn btn-delete" onclick="deleteTransaction(<%= transaction.id %>)">Delete</button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- View Modal Structure -->
  <!-- View Modal Structure -->
  <div id="viewModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close" onclick="closeModal('viewModal')">&times;</span>
            <h2 id="viewHeader">View Record Information</h2>
        </div>
        <p id="viewDetails"></p>
    </div>
</div>

<div id="updateModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close" onclick="closeModal('updateModal')">&times;</span>
            <h2 id="updateHeader">Update Transaction</h2>
        </div>
        <form id="updateForm" onsubmit="updateTransaction(event)">
            <input type="hidden" name="id" id="updateId">
            <div>
                <label for="updateName">Name</label>
                <input type="text" name="name" id="updateName" required>
            </div>
            <div>
                <label for="updateAmount">Amount</label>
                <input type="number" name="amount" id="updateAmount" required>
            </div>
            <div>
                <label for="updateDate">Date</label>
                <input type="date" name="date" id="updateDate" required>
            </div>
            <button type="submit">Update</button>
        </form>
    </div>
</div>
    <script src="/script.js"></script>
</body>
</html>